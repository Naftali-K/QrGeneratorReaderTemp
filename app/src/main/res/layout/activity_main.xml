<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Create QR Code"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_generator_1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="QRGenerator GitHub"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_generator_2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="QRGen - Not Working"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_generator_3_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ZXing"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_generator_4_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ZXing 2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Scanner QR Code"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_scanner_1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ZXing QR Scanner"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qr_scanner_2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="ZXing QR Scanner 2"/>

</LinearLayout>